// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  posts Post[] @relation("posting")
}

model Post {
  id     String @id @default(uuid())
  rating Float
  author User   @relation("posting", fields: [userId], references: [id])
  userId String
}
